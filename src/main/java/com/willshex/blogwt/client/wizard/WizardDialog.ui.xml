<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.willshex.blogwt.client.wizard.page">
	<ui:style gss="true">
	.form-wizard {
		max-width: 330px;
		padding: 15px;
		margin: 0 auto;
	}
	
	.form-wizard input[type="text"], .form-wizard input[type="password"], .form-wizard select {
		margin: 2px 0;
	}
	
	.form-wizard .btn {
		margin: 5px 0;
	}
	
	.form-wizard .right {
		float: right;
	}
	</ui:style>
	<g:HTMLPanel>
		<!-- Add GWT widgets here. Enter < and hit Ctrl-Space to auto-complete widget names. The ui:field attribute binds an element to a field in the owner class. See 
			the GWT docs on UI Binder for more details. -->

		<g:FormPanel styleName="{style.form-wizard}">
			<g:HTMLPanel>

				<h2 ui:field="h2WizardTitle">Title</h2>
				<h3 ui:field="h3PageTitle">Title</h3>

				<g:HTMLPanel ui:field="pnlContents" />

				<div class="btn-toolbar">
					<div class="btn-group">
						<g:Button ui:field="btnBack" styleName="{style.btn} btn btn-default" text="Back" visible="false" />
					</div>

					<div class="{style.right} btn-group">
						<g:Button ui:field="btnNext" styleName="{style.btn} btn btn-primary" text="Next" />
					</div>

					<g:HTMLPanel styleName="{style.right} btn-group" ui:field="pnlRepeatable">
						<g:Button ui:field="btnRemoveChild" styleName="{style.btn} btn btn-danger disabled" text="-" />
						<g:Button ui:field="btnAddChild" styleName="{style.btn} btn btn-default" text="+" />
					</g:HTMLPanel>

				</div>
			</g:HTMLPanel>
		</g:FormPanel>


	</g:HTMLPanel>
</ui:UiBinder> 