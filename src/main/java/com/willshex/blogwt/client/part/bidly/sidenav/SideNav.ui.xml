<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:import field="com.willshex.blogwt.client.helper.bidly.PageTypeHelper.*" />
	<ui:style gss="true">
	@external glyphicon, badge, active;
	.side-nav {
		position: fixed;
		background: #312e49;
		top: 0;
		padding-top: 100px;
		padding-right: 10px;
		overflow: auto;
		height: 100%;
		transition: all 0.2s;
		z-index: 1000;
	}
	
	.side-nav ul {
		padding-left: 0;
	}
	
	.side-nav li {
		padding: 10px;
		list-style: none;
	}
	
	.side-nav li a {
		color: #9d9d9d;
		text-decoration: none;
	}
	
	.side-nav li a:HOVER, .side-nav li a:FOCUS, .side-nav li a.active {
		color: #fff;
	}
	
	.side-nav li a .glyphicon {
		color: #7dde89;
		font-size: 150%;
		vertical-align: middle;
		margin-right: 10px;
	}
	
	.side-nav li a:HOVER .glyphicon, .side-nav li a:FOCUS .glyphicon, .side-nav li a.active .glyphicon {
		color: #fff;
	}
	
	.transparent {
		background-color: transparent;
		color: #9d9d9d;
	}
	
	.transparent:HOVER, .transparent:FOCUS {
		color: #fff;
	}
	
	.badge {
		background: #ba205b;
		position: relative;
		top: -10px;
		left: -10px;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.side-nav}">
		<ul>
			<li>
				<a href="{DASHBOARD_PAGE_HREF}" title="Dashboard">
					<span class="glyphicon glyphicon-home" />
					<span ui:field="elDashboard">
						Dashboard
					</span>
				</a>
			</li>
			<li>
				<a href="{BUILD_BIDS_PAGE_HREF}" title="Offers">
					<span class="glyphicon glyphicon-piggy-bank" />
					<span class="badge">7</span>
					<span ui:field="elBuildBids">
						Offers
					</span>
				</a>
			</li>
			<li>
				<a href="{ONGOING_BUILD_BIDS_PAGE_HREF}" title="Deal Stage">
					<span class="glyphicon glyphicon-thumbs-up" />
					<span ui:field="elOngoingBuildBids">
						Deal Stage
					</span>
				</a>
			</li>
			<li>
				<a href="{INVENTORY_VEHICLES_PAGE_HREF}" title="Garage">
					<span class="glyphicon glyphicon-upload" />
					<span ui:field="elUploadInventory">
						Garage
					</span>
				</a>
			</li>
			<li>
				<a href="{INVENTORY_BIDS_PAGE_HREF}" title="Used Car Offers">
					<span class="glyphicon glyphicon-knight" />
					<span class="badge">14</span>
					<span ui:field="elInventoryBids">
						Used Car Offers
					</span>
				</a>
			</li>
		</ul>
		<div class="text-center">
			<g:Button ui:field="btnToggle" styleName="btn btn-sm {style.transparent}">
				<span ui:field="elDirection" class="glyphicon glyphicon-triangle-left" />
			</g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 