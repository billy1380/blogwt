<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.radiobutton label {
		display: inline;
		padding-left: 5px;
	}
	</ui:style>
	<g:HTMLPanel styleName="form-group">
		<label class="control-label" ui:field="elDescription" />
		<label class="small text-muted" ui:field="elName" />
		<div>
			<g:RadioButton ui:field="rdoNone" name="comments_enabled" text="None"
				styleName="{style.radiobutton}" />
			<br />
			<g:RadioButton ui:field="rdoDisqus" name="comments_enabled"
				styleName="{style.radiobutton}" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 