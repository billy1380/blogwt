<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:p="urn:import:com.willshex.blogwt.client.part">

	<ui:style>
	
	</ui:style>

	<g:HTMLPanel styleName="container">
		<h2 ui:field="elHeading">
			Top matches for
		</h2>

		<g:HTMLPanel styleName="row">
			<div ui:field="elPosts">
				<h2 ui:field="elPostsHeading">Posts</h2>
				<c:CellList ui:field="clPostResults" styleName="col-sm-9" />
			</div>
			<div ui:field="elPages">
				<h2 ui:field="elPagesHeading">Pages</h2>
				<c:CellList ui:field="clPageResults" styleName="col-sm-9" />
			</div>
			<div ui:field="elUsers">
				<h2 ui:field="elUsersHeading">Users</h2>
				<c:CellList ui:field="clUserResults" styleName="col-sm-9" />
			</div>
			<div class="col-sm-3">
				<p:ShortDescriptionPart ui:field="coShortDescription" />
				<p:SearchPart ui:field="coSearch" />
				<p:TagsPart ui:field="coTags" />
				<p:ArchivePart ui:field="coArchive" />
			</div>
		</g:HTMLPanel>


		<p:NoneFoundPanel subject="posts" ui:field="pnlNoPostResults" />
		<p:LoadingPanel ui:field="pnlPostsLoading" />

		<p:NoneFoundPanel subject="pages" ui:field="pnlNoPageResults" />
		<p:LoadingPanel ui:field="pnlPagesLoading" />

		<p:NoneFoundPanel subject="results" ui:field="pnlNoUserResults" />
		<p:LoadingPanel ui:field="pnlUsersLoading" />

		<p:BackToTop />
	</g:HTMLPanel>
</ui:UiBinder> 