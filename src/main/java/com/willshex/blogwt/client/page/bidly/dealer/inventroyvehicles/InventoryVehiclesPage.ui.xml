<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:com.willshex.blogwt.client.part.bidly.sidenav" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:com.willshex.blogwt.client.part">
	<ui:import field="com.willshex.blogwt.shared.page.PageType.*" />
	<ui:style>
	.space {
		margin-top: 20px;
	}
	</ui:style>
	<g:HTMLPanel styleName="container">
		<h1>Garage</h1>

		<div class="btn-toolbar">
			<div class="btn-group">
				<g:InlineHyperlink ui:field="lnkNewVehicle" styleName="btn btn-default"
					targetHistoryToken="{UploadInventoryPageType.asTargetHistoryToken}/new">
					<span class="glyphicon glyphicon-plus" />
					New Car
				</g:InlineHyperlink>
				<g:InlineHyperlink ui:field="lnkVehicleBatch" styleName="btn btn-default"
					targetHistoryToken="{UploadInventoryPageType.asTargetHistoryToken}/new">
					<span class="glyphicon glyphicon-plus" />
					Batch Upload Cars
				</g:InlineHyperlink>
			</div>
			<g:Button ui:field="btnRefresh" styleName="btn btn-info">
				<span class="glyphicon glyphicon-refresh" />
			</g:Button>
		</div>

		<c:CellList ui:field="clVehicles" styleName="row {style.space}" />

		<p:SimplePager ui:field="pgrBottom" styleName="text-right" />

		<p:LoadingPanel ui:field="pnlLoading" />

		<p:NoneFoundPanel subject="offers" ui:field="pnlNoOffers" />
	</g:HTMLPanel>
</ui:UiBinder> 