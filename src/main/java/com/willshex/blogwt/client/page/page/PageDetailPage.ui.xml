<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:com.willshex.blogwt.client.part">
	<ui:import field="com.willshex.blogwt.client.Resources.CELL_TABLE_RES" />
	<ui:import field="com.willshex.blogwt.client.page.PageType.EditPagePageType" />
	<ui:style gss="true">
	.bottom-margin {
		margin-bottom: 10px;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="btn-toolbar {style.bottom-margin}">
			<div class="btn-group pull-right">
				<g:Button ui:field="btnDeletePage" styleName="btn btn-danger">
					<span class="glyphicon glyphicon-trash"></span>
				</g:Button>
			</div>
			<div class="btn-group pull-right">
				<g:InlineHyperlink ui:field="lnkEditPage" styleName="btn btn-default"
					targetHistoryToken="{EditPagePageType.asTargetHistoryToken}/xxx">
					<span class="glyphicon glyphicon-edit"></span>
					Edit Page
				</g:InlineHyperlink>
			</div>
		</div>
		<g:HTMLPanel styleName="row">
			<div class="col-sm-8">

				<g:HTMLPanel styleName="text-center" ui:field="pnlLoading">
					<g:Image visible="true" resource="{CELL_TABLE_RES.cellTableLoading}" />
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="pnlContent" />

			</div>
		</g:HTMLPanel>
		<p:BackToTop />
	</g:HTMLPanel>
</ui:UiBinder> 