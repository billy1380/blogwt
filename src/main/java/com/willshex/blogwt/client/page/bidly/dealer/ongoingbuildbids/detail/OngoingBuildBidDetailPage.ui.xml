<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	@external btn;
	.info .title {
		font-size: 190%;
	}
	
	.important {
		font-size: 190%;
	}
	
	.subtitle {
		font-weight: 300;
		text-transform: uppercase;
		letter-spacing: -0.1em;
	}
	
	.info .subtitle {
		font-size: 150%;
	}
	
	.messages .btn {
		width: 100%;
		margin-bottom: 10px;
		margin-left: 10px;
		margin-right: 10px;
	}
	
	.separate {
		margin-bottom: 30px;
	}
	
	.space {
		margin-top: 20px;
	}
	
	.message-history {
		height: 350px;
		overflow: hidden;
		overflow-y: auto;
	}
	
	.message {
		position: relative;
		padding: 15px;
		color: #000;
		margin: 0 10px 0 10px;
	}
	
	.message:after {
		content: "";
		position: absolute;
		bottom: -15px;
		left: 50px;
		border-width: 15px 15px 0;
		border-style: solid;
		display: block;
		width: 0;
	}
	
	.message.left {
		background: #ddd;
	}
	
	.message.left:after {
		top: 0;
		left: -10px;
		bottom: auto;
		border-width: 10px;
		border-color: #ddd transparent transparent transparent;
	}
	
	.message.right {
		background: #ccc;
	}
	
	.message.right:after {
		top: 0;
		right: -10px;
		bottom: auto;
		left: auto;
		border-width: 10px;
		border-color: #ccc transparent transparent transparent;
	}
	
	.border {
		border: solid 1px;
		color: #888;
	}
	</ui:style>
	<g:HTMLPanel styleName="container">
		<h1 ui:field="elTitle">Deal</h1>

		<div class="btn-toolbar {style.space}">
			<g:Button ui:field="btnRefresh" styleName="btn btn-info">
				<span class="glyphicon glyphicon-refresh" />
			</g:Button>
		</div>

		<h2>Summary</h2>
		<div class="row">
			<div class="col-sm-9">
				<div class="row {style.separate}">
					<div class="col-md-6">
						<label>Current status</label>
						<div class="{style.info}">
							<span class="{style.title}">Sold via Bidly</span>
						</div>
					</div>

					<div class="col-md-6">
						<label>Status</label>
						<g:ListBox ui:field="cboStatus" styleName="form-control">
							<g:item>Sold via Bidly</g:item>
							<g:item>Bought from different garage</g:item>
							<g:item>Lost contact</g:item>
							<g:item>Declined on finance</g:item>
						</g:ListBox>
					</div>
				</div>
				<div class="row">
					<div class="col-md-3">
						<label>Distance to showroom</label>
						<div class="{style.info}">
							<span class="{style.title}">10</span>
							<span class="{style.subtitle} text-muted">miles</span>
						</div>
					</div>

					<div class="col-md-3">
						<label>Delivery time</label>
						<div class="{style.info}">
							<span class="{style.title}">3</span>
							<span class="{style.subtitle} text-muted">months</span>
						</div>
					</div>

					<div class="col-md-3">
						<label>New OTR price</label>
						<div class="{style.info}">
							<span class="{style.subtitle} text-muted">&pound;</span>
							<span ui:field="elNewOtr" class="{style.title}">35,150</span>
						</div>
					</div>

					<div class="col-md-3">
						<label>Your discount</label>
						<div class="{style.info} {style.important}">
							<span class="{style.subtitle} text-muted">&pound;</span>
							<span class="{style.title}">1,500</span>
						</div>
					</div>
				</div>

				<h2>Messages</h2>
				<div class="{style.messages}">
					<div class="{style.message-history} {style.separate}">
						<div class="row {style.space}">
							<div class="col-xs-2 text-right">
								<img class="img-circle {style.border}"
									src="https://secure.gravatar.com/avatar/7691ad022eb8c059658e5d0ed4ff4c6a?s=50&amp;default=retro" />
							</div>

							<div class="col-xs-8">
								<div class="{style.message} {style.left}">
									Hi, thank you for choosing us for you new vehicle
									purchase,
									is there anything we can help you with or any questions you
									may have.
								</div>
							</div>
						</div>
						<div class="row {style.space}">

							<div class="col-xs-8 col-xs-offset-2">
								<div class="{style.message} {style.right}">
									Hi, is it possible to arrange a test drive.
								</div>
							</div>
							<div class="col-xs-2 text-left">
								<img class="img-circle {style.border}"
									src="https://secure.gravatar.com/avatar/b642b4217b34b1e8d3bd915fc65c4452?s=50&amp;default=retro" />
							</div>
						</div>
						<div class="row {style.space}">
							<div class="col-xs-2 text-right">
								<img class="img-circle {style.border}"
									src="https://secure.gravatar.com/avatar/7691ad022eb8c059658e5d0ed4ff4c6a?s=50&amp;default=retro" />
							</div>

							<div class="col-xs-8">
								<div class="{style.message} {style.left}">
									Sure, no problem, does Saturday 16th @ 11:00am work for
									you.
								</div>
							</div>
						</div>
						<div class="row {style.space}">
							<div class="col-xs-8 col-xs-offset-2">
								<div class="{style.message} {style.right}">
									Yes thats perfect.
								</div>
							</div>
							<div class="col-xs-2 text-left">
								<img class="img-circle {style.border}"
									src="https://secure.gravatar.com/avatar/b642b4217b34b1e8d3bd915fc65c4452?s=50&amp;default=retro" />
							</div>
						</div>
						<div class="row {style.space}">
							<div class="col-xs-2 text-right">
								<img class="img-circle {style.border}"
									src="https://secure.gravatar.com/avatar/7691ad022eb8c059658e5d0ed4ff4c6a?s=50&amp;default=retro" />
							</div>

							<div class="col-xs-8">
								<div class="{style.message} {style.left}">
									Would you like a finance quote?
								</div>
							</div>
						</div>
					</div>

					<div class="row {style.separate}">
						<div class="col-sm-9">
							<label>Message templates</label>
							<g:ListBox ui:field="cboMessageTemplates" styleName="form-control">
								<g:item>Part-ex your current car</g:item>
								<g:item>Finance quote</g:item>
								<g:item>Book a test drive</g:item>
							</g:ListBox>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-9">
							<label>Message</label>
							<g:TextArea ui:field="txtNewMessage" styleName="form-control" visibleLines="5" />
						</div>
						<div class="col-sm-3">
							<label>&nbsp;</label>
							<g:Button ui:field="btnAttach" styleName="btn btn-lg btn-default">
								Attach files
							</g:Button>

							<g:Button ui:field="btnSend" styleName="btn btn-lg btn-success">
								Send
							</g:Button>
						</div>
					</div>
				</div>

			</div>
			<div class="col-sm-3">
				<div class="{style.separate}">
					<label>Make and Model</label>
					<div class="{style.info}">
						<div class="{style.title}">Volkswagen</div>
						<span class="{style.subtitle}">Arteon R-Line</span>
					</div>
				</div>

				<div class="{style.separate}">
					<label>Engine</label>
					<div class="{style.info}">
						<span class="{style.title}">2L TDI</span>
					</div>
				</div>

				<div class="{style.separate}">
					<label>Transmition</label>
					<div class="{style.info}">
						<span class="{style.title}">Automatic</span>
					</div>
				</div>

				<div class="{style.separate}">
					<label>OTR price</label>
					<div class="{style.info}">
						<span class="{style.subtitle}">&pound;</span>
						<span ui:field="elOtr" class="{style.title}">35,650</span>
					</div>
				</div>

				<div class="{style.separate}">
					<label>Extras</label>
					<ul>
						<li>LED headlights</li>
						<li>White paint</li>
						<li>Heated seats</li>
						<li>Reverse camera</li>
						<li>18" alloys</li>
						<li>Sat nav</li>
					</ul>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 