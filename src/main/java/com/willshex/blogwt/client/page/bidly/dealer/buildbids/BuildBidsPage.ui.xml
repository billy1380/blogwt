<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:com.willshex.blogwt.client.part.bidly.sidenav" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:com.willshex.blogwt.client.part">
	<ui:style>
	.space {
		margin-top: 20px;
	}
	</ui:style>
	<g:HTMLPanel>

		<div class="container">
			<h1>Offers</h1>

			<div class="btn-toolbar">
				<g:Button ui:field="btnRefresh" styleName="btn btn-info">
					<span class="glyphicon glyphicon-refresh"></span>
				</g:Button>
			</div>

			<c:CellList ui:field="clOffers" styleName="row {style.space}" />

			<p:SimplePager ui:field="pgrBottom" styleName="text-right" />

			<p:LoadingPanel ui:field="pnlLoading" />

			<p:NoneFoundPanel subject="offers" ui:field="pnlNoOffers" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 