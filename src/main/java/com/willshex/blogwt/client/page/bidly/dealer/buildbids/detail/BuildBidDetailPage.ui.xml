<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	@external badge, btn;
	.title {
		font-size: 190%;
	}
	
	.important {
		font-size: 190%;
	}
	
	.subtitle {
		font-weight: 300;
		font-size: 150%;
		text-transform: uppercase;
	}
	
	.red {
		background-color: #f44336;
	}
	
	.green {
		background-color: #4caf50;
	}
	
	.bidding .badge {
		position: relative;
		top: -10px;
	}
	
	.bidding .btn {
		width: 100%;
		margin-bottom: 10px;
	}
	
	.submit {
		margin-top: 20px;
	}
	
	.separate {
	   margin-top: 10px;
	   margin-bottom: 30px;
	}
	</ui:style>
	<g:HTMLPanel styleName="container {style.bidding}">
		<h1 ui:field="elTitle">Offer</h1>

		<div class="row">
			<div class="col-sm-8">
				<div class="row">
					<div class="col-md-3">
						<label>Distance to showroom</label>
						<div>
							<span class="{style.title}">10</span>
							<span class="{style.subtitle}">miles</span>
						</div>
					</div>

					<div class="col-md-3">
						<label>Travel distance</label>
						<div>
							<span class="{style.title}">25</span>
							<span class="{style.subtitle}">miles</span>
						</div>
					</div>

					<div class="col-md-6">
						<label>Bid expires in</label>
						<div class="{style.important}">
							<span class="{style.title}">2</span>
							<span class="{style.subtitle}">hours</span>
							<span class="{style.title}">15</span>
							<span class="{style.subtitle}">mins</span>
						</div>
					</div>
				</div>

				<hr class="{style.separate}"/>
				
				<div class="row">
					<div class="col-md-4">
						<label>Dealers bidding</label>
						<div class="{style.title}">5</div>
					</div>

					<div class="col-md-4">
						<label>My Bid</label>
						<span class="badge {style.red}">losing</span>
						<div class="{style.important}">
							<span class="{style.subtitle}">&pound;</span>
							<span class="{style.title}">500</span>
						</div>
					</div>
					<div class="col-md-4">
                        <label>New OTR price</label>
                        <div class="{style.important}">
                            <span class="{style.subtitle}">&pound;</span>
                            <span class="{style.title}">35,150</span>
                        </div>
                    </div>
				</div>

				<h2>Increase bid</h2>
				<div class="row">
					<div class="col-sm-6 col-md-3">
						<g:Button styleName="btn btn-lg btn-default">
							<span class="{style.subtitle}">&pound;</span>
							<span class="{style.title}">50</span>
						</g:Button>
					</div>

					<div class="col-sm-6 col-md-3">
						<g:Button styleName="btn btn-lg btn-primary">
							<span class="{style.subtitle}">&pound;</span>
							<span class="{style.title}">100</span>
						</g:Button>
					</div>

					<div class="col-sm-6 col-md-3">
						<g:Button styleName="btn btn-lg btn-default">
							<span class="{style.subtitle}">&pound;</span>
							<span class="{style.title}">250</span>
						</g:Button>
					</div>

					<div class="col-sm-6 col-md-3">
						<g:Button styleName="btn btn-lg btn-default">
							<span class="{style.subtitle}">&pound;</span>
							<span class="{style.title}">500</span>
						</g:Button>
					</div>
				</div>
				<div class="row {style.submit}">
					<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
						<g:Button styleName="btn btn-lg btn-warning">
							Bid too high
						</g:Button>
					</div>
				</div>
			</div>
			<div class="col-sm-4">

				<div class="{style.separate}">
					<label>Make and Model</label>
					<div class="{style.title}">Volkswagen</div>
					<span class="{style.subtitle}">Arteon R-Line</span>
				</div>

				<div class="{style.separate}">
					<label>Engine</label>
					<div class="{style.title}">2L TDI</div>
				</div>

				<div class="{style.separate}">
					<label>Transmition</label>
					<div class="{style.title}">Automatic</div>
				</div>

				<div class="{style.separate}">
					<label>OTR price</label>
					<div>
						<span class="{style.subtitle}">&pound;</span>
						<span class="{style.title}">35,650</span>
					</div>
				</div>

				<div class="{style.separate}">
					<label>Extras</label>
					<ul>
						<li>LED headlights</li>
						<li>White paint</li>
						<li>Heated seats</li>
						<li>Reverse camera</li>
						<li>18" alloys</li>
						<li>Sat nav</li>
					</ul>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 