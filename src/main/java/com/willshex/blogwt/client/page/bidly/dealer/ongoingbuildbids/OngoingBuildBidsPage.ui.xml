<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:com.willshex.blogwt.client.part.bidly.sidenav">
	<ui:import field="com.willshex.blogwt.shared.page.PageType.*" />
	<ui:style>
	.space {
		margin-top: 20px;
	}
	
	.amber {
		color: #ffc107;
	}
	
	.red {
		color: #f44336;
	}
	
	.green {
		color: #4caf50;
	}
	</ui:style>
	<g:HTMLPanel>
		<s:SideNav />
		<div class="container">
			<h2>Deal Stage</h2>

			<ul class="nav nav-tabs">
				<li>
					<g:InlineHyperlink targetHistoryToken="{OngoingBuildBidsPageType.asTargetHistoryToken}">
						All
					</g:InlineHyperlink>
				</li>
				<li class="active">
					<g:InlineHyperlink ui:field="lnkAccepted"
						targetHistoryToken="{OngoingBuildBidsPageType.asTargetHistoryToken}/accepted">
						Accepted
						<span class="glyphicon glyphicon-record {style.green}" />
					</g:InlineHyperlink>
				</li>
				<li role="presentation">
					<g:InlineHyperlink ui:field="lnkExpired"
						targetHistoryToken="{OngoingBuildBidsPageType.asTargetHistoryToken}/expired">
						Expired
						<span class="glyphicon glyphicon-record {style.red}" />
					</g:InlineHyperlink>
				</li>
				<li role="presentation">
					<g:InlineHyperlink ui:field="lnkNegotiation"
						targetHistoryToken="{OngoingBuildBidsPageType.asTargetHistoryToken}/negotiation">
						Negotiation
						<span class="glyphicon glyphicon-record {style.amber}" />
					</g:InlineHyperlink>
				</li>
			</ul>

			<div class="btn-toolbar {style.space}">
				<g:Button ui:field="btnRefresh" styleName="btn btn-info">
					<span class="glyphicon glyphicon-refresh" />
				</g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 