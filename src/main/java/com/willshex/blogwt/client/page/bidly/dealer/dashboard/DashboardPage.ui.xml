<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:com.willshex.blogwt.client.part.bidly.sidenav">
	<ui:import field="com.willshex.blogwt.shared.page.PageType.*" />
	<ui:style
		type="com.willshex.blogwt.client.page.bidly.dealer.dashboard.DashboardPage.Style">
		.links {
			stroke: #000;
			stroke-opacity: 0.2;
		}
		
		.polygons {
			fill: none;
			stroke: #000;
		}
		
		.polygons :first-child {
			fill: #f00;
		}
		
		.sites {
			fill: #000;
			stroke: #fff;
		}
		
		.sites :first-child {
			fill: #fff;
		}
		
		.marker {
			height: 5px;
		}
		
		.purple {
			background-color: #8e24aa;
		}
		
		.blue {
			background-color: #1e88e5;
		}
		
		.red {
			background-color: #f44336;
		}
		
		.green {
			background-color: #4caf50;
		}
		
		.large {
			font-size: 500%;
			font-family: 'Roboto', sans-serif;
			font-weight: 500;
		}
		</ui:style>
	<g:HTMLPanel styleName="container">
		<h1>Dashboard</h1>

		<ul class="nav nav-tabs">
			<li>
				<g:InlineHyperlink ui:field="lnkNew"
					targetHistoryToken="{DashboardPageType.asTargetHistoryToken}">
					New Cars
				</g:InlineHyperlink>
			</li>
			<li>
				<g:InlineHyperlink ui:field="lnkUsed"
					targetHistoryToken="{DashboardPageType.asTargetHistoryToken}/used">
					Used Cars
				</g:InlineHyperlink>
			</li>
		</ul>

		<h2>Summary</h2>
		<div class="row">
			<div class="col-sm-6 col-md-3">
				<div class="thumbnail">
					<div class="{style.green} {style.marker}">&nbsp;</div>
					<div class="caption">
						<h4 class="col-xs-6" ui:field="elGreenLabel"></h4>
						<div class="{style.large} text-center" ui:field="elGreenValue"></div>
					</div>
				</div>
			</div>
			<div class="col-sm-6 col-md-3">
				<div class="thumbnail">
					<div class="{style.red} {style.marker}">&nbsp;</div>
					<div class="caption">
						<h4 class="col-xs-6" ui:field="elRedLabel"></h4>
						<div class="{style.large} text-center" ui:field="elRedValue"></div>
					</div>
				</div>
			</div>
			<div class="col-sm-6 col-md-3">
				<div class="thumbnail">
					<div class="{style.blue} {style.marker}">&nbsp;</div>
					<div class="caption">
						<h4 class="col-xs-6" ui:field="elBlueLabel"></h4>
						<div class="{style.large} text-center" ui:field="elBlueValue"></div>
					</div>
				</div>
			</div>
			<div class="col-sm-6 col-md-3">
				<div class="thumbnail">
					<div class="{style.purple} {style.marker}">&nbsp;</div>
					<div class="caption">
						<h4 class="col-xs-6" ui:field="elPurpleLabel"></h4>
						<div class="{style.large} text-center" ui:field="elPurpleValue"></div>
					</div>
				</div>
			</div>
		</div>

		<h2>Weekly</h2>
		<div class="row">
			<div class="col-sm-6">
				<h4 ui:field="elChartTitle" class="text-center" />
				<div ui:field="elChart" class="ct-chart" />
			</div>
			<div class="col-sm-6">
				<h4 ui:field="elChart1Title" class="text-center" />
				<div ui:field="elChart1" class="ct-chart" />
			</div>
		</div>

		<h2>Quarterly</h2>
		<h4 ui:field="elChartsTitle" class="text-center" />
		<div class="row">
			<div ui:field="elChart2" class="ct-chart col-sm-3" />
			<div ui:field="elChart3" class="ct-chart col-sm-3" />
			<div ui:field="elChart4" class="ct-chart col-sm-3" />
			<div ui:field="elChart5" class="ct-chart col-sm-3" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 